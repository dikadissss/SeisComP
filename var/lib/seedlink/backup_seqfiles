#!/bin/bash

# Generated at Fri Sep  6 13:02:02 2024 - Do not edit!
# template: /home/sysop/seiscomp/share/templates/seedlink/backup_seqfiles.tpl

KEEP=30

mkdir -p "/home/sysop/seiscomp/var/lib/seedlink/backup"

find "/home/sysop/seiscomp/var/lib/seedlink/backup" -type f -mtime +$KEEP -exec rm -f '{}' \;

cd "/home/sysop/seiscomp/var/run/seedlink"
tar cf - *.seq *.state | gzip >"/home/sysop/seiscomp/var/lib/seedlink/backup/seq-"`date +'%Y%m%d'`.tgz
